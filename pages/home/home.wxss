/* pages/home/home.wxss */
.home_wrapper{
	background: #f1f1f1;
	height: 100%;
}

.home_wrapper .swiper{
	/*height: 1000rpx;*/
	height: 100%;
	position: relative;
}
.home_wrapper .swiper swiper{
	height: 80%;
}

.home_wrapper .swiper swiper image{
	width: 100%;
	height: 100%;
}

.home_wrapper .info{
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 20rpx;
	background: #fff;
	height: 600rpx;
	border-radius: 12rpx;
	box-shadow:0px 6px 25px #cccccc;
	padding: 45rpx;
	box-sizing: border-box;
}



.home_wrapper .info .user{
	padding-bottom: 30rpx;
	border-bottom: 2rpx solid #e8e8e8;
}
.home_wrapper .info .user .icon{
	width: 150rpx;
	height: 150rpx;
	background: pink;
	border-radius: 100%;
	float: left;
}

.home_wrapper .info .user .content{
	margin-left: 190rpx;
}

.home_wrapper .info .user .content .name{
	font-size: 40rpx;
	color: #424242;
	padding-top: 22rpx;
}


.home_wrapper .info .user .content .summary{
	font-size: 38rpx;
	color: #888888;
	margin-top: 15rpx;
}








